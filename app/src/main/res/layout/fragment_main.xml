<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:textAlignment="center"
    android:background="@color/backgroundColor">

    <TextView android:text="@string/warning" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/warningTextView"
        android:layout_alignParentEnd="true"
        android:textColor="@color/warningTextColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="your speed"
        android:id="@+id/vehiculeText"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/warningTextView"
        android:layout_alignParentStart="true"
        android:textColor="@color/labelColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/speed"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:textStyle="bold"
        android:elegantTextHeight="false"
        android:layout_below="@+id/vehiculeText"
        android:layout_alignParentStart="true"
        android:textAlignment="textEnd"
        android:textColor="@color/speedAndVolumeColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="limit"
        android:id="@+id/speedLimitText"
        android:layout_alignTop="@+id/vehiculeText"
        android:layout_centerHorizontal="true"
        android:textColor="@color/labelColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/limit"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:textStyle="bold"
        android:elegantTextHeight="false"
        android:layout_below="@+id/speedLimitText"
        android:layout_centerHorizontal="true"
        android:textAlignment="textEnd"
        android:textColor="@color/limitColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="volume"
        android:id="@+id/musicText"
        android:layout_alignTop="@+id/speedLimitText"
        android:layout_alignEnd="@+id/warningTextView"
        android:textColor="@color/labelColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/volume"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:textStyle="bold"
        android:elegantTextHeight="false"
        android:layout_below="@+id/musicText"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        android:textColor="@color/speedAndVolumeColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/detailView"
        android:layout_below="@+id/speed"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/volume" />

</RelativeLayout>
